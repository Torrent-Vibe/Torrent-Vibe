  "main": "./dist/main/index.js",
  "scripts": {
    "build": "vite build",
    "build:electron": "electron-vite build && electron-forge make",
    "build:native": "bash native/build-all.sh",
    "build:production": "vite build --mode production",
    "build:render-release": "cross-env NODE_ENV=production ELECTRON_RENDER_BUILD=1 vite build --mode production",
    "build:turbo": "turbo run build --filter=@torrent-vibe/*",
    "dev": "vite",
    "predev:electron": "pnpm build:native && node scripts/write-main-hash-dev.js",
    "dev:electron": "electron-vite dev",
    "electron:build": "electron-vite build",
    "electron:make": "electron-forge make",
    "electron:make:darwin": "pnpm build:native && electron-forge make --platform=darwin",
    "electron:preview": "electron-vite preview",
    "electron:publish": "electron-forge publish",
    "format": "prettier --write \"src/**/*.ts\" ",
    "gen:icons": "bash scripts/generate-icons.sh",
    "license:check": "node scripts/check-licenses.js",
    "license:update": "node scripts/update-licenses.js",
    "lint": "eslint --fix",
    "prepare": "simple-git-hooks",
    "serve": "vite preview",
    "start:electron": "electron-vite preview",
    "typecheck": "pnpm -F @torrent-vibe/renderer typecheck",
    "typecheck:main": "pnpm -F @torrent-vibe/main typecheck",
    "typecheck:renderer": "pnpm -F @torrent-vibe/renderer typecheck",
    "typecheck:turbo": "turbo run typecheck --filter=@torrent-vibe/*",
    "update:generate-signing": "node scripts/generate-update-signing-keypair.js"
